set nu    "show line numbers
set tabstop=4    "tab space
set shiftwidth=4 "number of spaces inserted for indentation
set expandtab    "all tab will be replaced by space

filetype on
syntax on    "turn on the syntax
filetype indent on

set nowrap
set smarttab     "turn on the smart tab
set smartindent  "smart indentation
set autoindent   "auto indentation
set showmatch    "automatically show matching brackets
set hlsearch     "hightlight the serach result

:hi Search ctermbg=12    "hightlight the search with colourful terminal background using color 12 (red)
